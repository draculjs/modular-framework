mixin head(title)
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        title=title
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

mixin tablesix
    table(align='center', border='0', cellpadding='0', cellspacing='0', width='600', style='border: 0px solid #cccccc; border-collapse: collapse;')
        tbody
            if block
                block


mixin tablesec
    table(border='0', cellpadding='0', cellspacing='0', width='100%')
        tbody
            if block
                block

mixin headerh1(appname)
    td(align='center', bgcolor='#4A148C', style='padding: 10px 0 5px 0; color: #153643; font-size: 28px; font-weight: bold; font-family: Arial, sans-serif;')
        h1(style='padding: 0; margin:5px; color:#FFFFFF;')=appname


mixin title(text)
    tr
        td(style='color: #153643; font-family: Arial, sans-serif; font-size: 24px; padding: 0 0 15px 0;')
            b=text

mixin description(text)
    tr
        td(style='padding: 5px 0 10px 0; color: #153643; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;')=text

mixin button(link,text)
    tr
        td(style='text-align:center; padding: 30px 0 0 0')
            div
                <!--[if mso]>
                <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" xmlns:w="urn:schemas-microsoft-com:office:word" href="!{link}" style="height:53px;v-text-anchor:middle;width:200px;" arcsize="8%" stroke="f" fillcolor="#49a9ce">
                <w:anchorlock/>
                <center>
                <![endif]-->
                a(href=link, style='background-color:#49a9ce;border-radius:4px;color:#ffffff;display:inline-block;font-family:sans-serif;font-size:13px;font-weight:bold;line-height:53px;text-align:center;text-decoration:none;width:200px;-webkit-text-size-adjust:none;')
                    =text
                <!--[if mso]>
                </center>
                </v:roundrect>
                <![endif]-->

mixin tail(btext,text)
    tr
        td(style='padding: 25px 0 10px 0; color: #153643; font-family: Arial, sans-serif; font-size: 14px; line-height: 20px;')
            b=btext
            br
            =text

mixin footer(copyright)
    td(bgcolor='#263238', style='padding: 30px 30px 30px 30px;')
        table(border='0', cellpadding='0', cellspacing='0', width='100%')
            tbody
                tr
                    td(style='color: #ffffff; font-family: Arial, sans-serif; font-size: 14px;', width='100%')
                        =copyright
