include mixins
doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
    +head('Titulo')
    body(style='margin: 0; padding: 0; background-color:#dddddd;')
        +tablesec
            tr
                td(style='padding: 10px 0 10px 0;')
                    table(align='center', border='0', cellpadding='0', cellspacing='0', width='600', style='border: 3px solid #cccccc; border-collapse: collapse;')
                        tbody
                            tr
                                +headerh1(`${appName}`)
                            tr
                                td(bgcolor='#ffffff', style='padding: 40px 30px 40px 30px;')
                                    +tablesec
                                        +title(title)
                                        +description(`Hola ${name} `)
                                        +description(description)
                                        +button(url,btnText)
                                        +tail(signature,appName)
                            tr
                                +footer(copyright)




